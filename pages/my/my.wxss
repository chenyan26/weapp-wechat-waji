.user {
  width: 725rpx;
  background: #ffffff;
  padding: 30rpx 25rpx 30rpx 0;
  margin: 15rpx 0 0 0;
  border-top: 1px solid #F0F0F0;
  border-bottom: 1px solid #F0F0F0;
  box-shadow: 0 2px 5px #F0F0F0;
}
.user .userinfo-avatar{
  flex: 1;
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 80rpx;
}
.user .user-info{
  flex: 5;
  text-align: left;
}
.user .user-info text{
  display: block;
}
.user .user-info .userinfo-nickname{
  padding: 8rpx 0 10rpx 0;
  font-size: 30rpx;
  color: #818A8F;
}
.user .user-info .edit{
  font-size: 30rpx;
  color: #bababa;
  line-height: 34rpx;
}
/* ä¸»table*/
.my{
  margin: 15rpx 0 0 0;
  border-top: solid 1px #F0F0F0;
  border-bottom: solid 2px #F0F0F0;
}
.my .my-item{
  width: 750rpx;
  height: 110rpx;
  background: #ffffff;
  border-bottom: solid 1px #F0F0F0;
  align-items: center
}

.my .my-item .myitem-icon{
  flex: 1;
}
.my .my-item .myitem-icon image{
  width: 50rpx;
  height: 50rpx;
}

.my .my-item .myitem-name{
  flex: 5;
  text-align: left;
  font-size: 30rpx;
  color: #666666;
}

.my .my-item .myitem-tail{
  flex: 1;
}
.my .my-item .myitem-tail image{
  width: 20rpx;
  height: 20rpx;
}
